<view class="flash-card" bindtap="onCardTap">
  <!-- È°∂ÈÉ®‰ø°ÊÅØÊ†è -->
  <view class="card-header">
    <view class="category-tag" data-category="{{item.category}}">
      <text>{{categoryIcon}} {{item.category}}</text>
    </view>
    <view class="time-text">{{displayTime}}</view>
  </view>
  
  <!-- Ê†áÈ¢ò -->
  <view class="card-title">
    <text>{{item.title}}</text>
  </view>
  
  <!-- ÊëòË¶ÅÂÜÖÂÆπ -->
  <view class="card-summary" wx:if="{{item.summary}}">
    <text>{{item.summary}}</text>
  </view>
  
  <!-- Â∫ïÈÉ®‰ø°ÊÅØ -->
  <view class="card-footer">
    <!-- ÂÖ≥ÈîÆËØçÊ†áÁ≠æ -->
    <view class="keywords" wx:if="{{item.keywords && item.keywords.length > 0}}">
      <view class="keyword-tag" wx:for="{{item.keywords}}" wx:key="index" wx:if="{{index < 3}}">
        <text>#{{item}}</text>
      </view>
    </view>
    
    <!-- Âè≥‰æßÊìç‰ΩúÂå∫ -->
    <view class="actions">
      <!-- Èü≥È¢ëÊó∂Èïø -->
      <view class="duration-info" wx:if="{{item.audio_duration}}">
        <text class="icon">üéµ</text>
        <text class="duration-text">{{formattedDuration}}</text>
      </view>
      
      <!-- Êî∂ËóèÂõæÊ†á -->
      <view class="favorite-icon {{item.is_favorite ? 'active' : ''}}" catchtap="onFavorite">
        <text>{{item.is_favorite ? '‚≠ê' : '‚òÜ'}}</text>
      </view>
    </view>
  </view>
</view>

