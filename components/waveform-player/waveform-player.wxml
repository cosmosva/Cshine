<!--音频波形播放器组件-->
<view class="waveform-player">
  <!-- 波形可视化 Canvas -->
  <canvas 
    canvas-id="waveformCanvas" 
    id="waveformCanvas"
    class="waveform-canvas"
    disable-scroll="true"
  ></canvas>
  
  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <text class="loading-text">加载波形中...</text>
  </view>
  
  <!-- 时间显示 -->
  <view class="time-display">
    <text class="current-time">{{formatTime(currentTime)}}</text>
    <text class="total-time">{{formatTime(duration)}}</text>
  </view>
  
  <!-- 播放控制按钮 -->
  <view class="controls">
    <!-- 倍速按钮 -->
    <view class="control-btn" bindtap="changeSpeed">
      <text class="btn-icon">⚡</text>
      <text class="btn-label">{{playbackRate}}x</text>
    </view>
    
    <!-- 后退15秒 -->
    <view class="control-btn" bindtap="seekBackward">
      <text class="btn-icon">⏪</text>
      <text class="btn-label">-15s</text>
    </view>
    
    <!-- 播放/暂停 -->
    <view class="control-btn play-btn" bindtap="togglePlay">
      <text class="btn-icon">{{isPlaying ? '⏸️' : '▶️'}}</text>
    </view>
    
    <!-- 前进15秒 -->
    <view class="control-btn" bindtap="seekForward">
      <text class="btn-icon">⏩</text>
      <text class="btn-label">+15s</text>
    </view>
  </view>
</view>

