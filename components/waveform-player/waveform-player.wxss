/* 音频波形播放器样式 */
.waveform-player {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 波形Canvas */
.waveform-canvas {
  width: 100%;
  height: 240rpx;
  display: block;
  background: #fafafa;
  position: relative;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(250, 250, 250, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 时间显示 */
.time-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
}

.current-time {
  font-weight: 500;
  color: #333;
}

.total-time {
  color: #999;
}

/* 播放控制按钮 */
.controls {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  padding: 16rpx 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.control-btn:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

.play-btn {
  min-width: 120rpx;
  background: #ff4757;
}

.play-btn:active {
  background: #e63946;
}

.btn-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 4rpx;
}

.play-btn .btn-icon {
  color: #fff;
}

.btn-label {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.play-btn .btn-label {
  color: #fff;
}

