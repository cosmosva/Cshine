/* AI 模型选择器样式 */

.ai-model-picker {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  pointer-events: none;
}

/* 遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  transition: background 0.3s;
  pointer-events: auto;
}

.mask.show {
  background: rgba(0, 0, 0, 0.5);
}

/* 弹窗内容 */
.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 70vh;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  pointer-events: auto;
}

.picker-content.show {
  transform: translateY(0);
}

/* 标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

/* 模型列表 */
.model-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.model-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  transition: background 0.2s;
}

.model-item:active {
  background: #f5f5f5;
}

.model-item.selected {
  background: #f0f7ff;
}

.model-info {
  flex: 1;
  min-width: 0;
}

.model-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.default-badge {
  font-size: 22rpx;
  font-weight: normal;
  color: #ff9500;
  background: #fff5e5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.model-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #007aff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 20rpx 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

/* 加载中 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮 */
.footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #007aff;
  color: #fff;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

