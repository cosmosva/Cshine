/* 录音按钮组件样式 */

.record-button-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxxl) 0;
  overflow: visible;
}

/* ==================== 波形动画 ==================== */

.wave-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 0;
  pointer-events: none;
}

.wave {
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  border: 3rpx solid var(--color-primary);
  opacity: 0.6;
  animation: wave-pulse 1.5s ease-out infinite;
  transform-origin: center;
  will-change: transform, opacity;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

.wave-2 {
  animation-delay: 0.3s;
}

.wave-3 {
  animation-delay: 0.6s;
}

@keyframes wave-pulse {
  0% {
    transform: scale(0.5) translateZ(0);
    opacity: 0.8;
  }
  100% {
    transform: scale(1.3) translateZ(0);
    opacity: 0;
  }
}

/* ==================== 主按钮 ==================== */

.record-button {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  box-shadow: 0 8rpx 32rpx rgba(74, 111, 232, 0.2);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
  overflow: visible;
  z-index: 1;
  will-change: transform;
}

.record-button::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: 50%;
  z-index: -1;
}

/* 按下状态 */
.record-button:active {
  transform: scale(0.95);
}

/* 录音中状态 */
.record-button.recording {
  animation: breathing 2s ease-in-out infinite;
  box-shadow: 0 12rpx 48rpx rgba(74, 111, 232, 0.4);
}

@keyframes breathing {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 渐变背景 */
.button-gradient {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, 
    rgba(74, 111, 232, 0.05) 0%, 
    rgba(123, 97, 255, 0.05) 100%);
  border-radius: 50%;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

/* ==================== 按钮内容 ==================== */

.button-icon {
  font-size: 96rpx;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

.icon-mic {
  display: block;
  animation: float 3s ease-in-out infinite;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

/* 录音中的圆点 */
.recording-dot {
  width: 32rpx;
  height: 32rpx;
  background-color: var(--color-error);
  border-radius: 50%;
  animation: blink 1s ease-in-out infinite;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

@keyframes blink {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(0.8);
  }
}

/* 按钮文字 */
.button-text {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
  letter-spacing: 2rpx;
  pointer-events: none; /* 让触摸事件穿透到父容器 */
}

/* ==================== 取消提示 ==================== */

.cancel-hint {
  margin-top: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: slideUp 0.3s ease;
}

.hint-arrow {
  font-size: var(--font-size-xxl);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xs);
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.hint-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
}

