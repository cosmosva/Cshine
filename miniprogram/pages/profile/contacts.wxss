/* 常用联系人管理页面样式 */
.contacts-page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  padding-bottom: 100px;
}

/* ========== 加载状态 ========== */
.loading-state {
  padding: 100px 0;
  text-align: center;
}

.loading-text {
  font-size: 14px;
  color: var(--color-text-tertiary);
}

/* ========== 页面内容 ========== */
.page-content {
  padding: var(--spacing-md);
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100px 32px;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: var(--spacing-md);
  opacity: 0.3;
}

.empty-text {
  font-size: 16px;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.empty-hint {
  font-size: 13px;
  color: var(--color-text-tertiary);
  text-align: center;
}

/* ========== 联系人列表 ========== */
.contacts-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.contact-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contact-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.contact-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.avatar-text {
  font-size: 20px;
  font-weight: 600;
  color: #fff;
}

.contact-details {
  flex: 1;
}

.contact-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 4px;
}

.contact-position {
  font-size: 13px;
  color: var(--color-text-secondary);
  margin-bottom: 4px;
}

.contact-meta {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.contact-meta text {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

/* ========== 操作按钮 ========== */
.contact-actions {
  display: flex;
  gap: var(--spacing-sm);
  flex-shrink: 0;
}

.action-btn {
  padding: 6px 12px;
  border-radius: var(--radius-md);
  font-size: 13px;
  transition: all 0.3s ease;
}

.edit-btn {
  color: var(--color-primary);
  background-color: rgba(100, 120, 255, 0.1);
}

.delete-btn {
  color: #FF3B30;
  background-color: rgba(255, 59, 48, 0.1);
}

.action-btn:active {
  opacity: 0.7;
  transform: scale(0.95);
}

/* ========== 新增按钮 ========== */
.add-btn-wrapper {
  position: fixed;
  bottom: 32px;
  right: 32px;
  z-index: 100;
}

.add-btn {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  box-shadow: 0 4px 12px rgba(100, 120, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

.add-icon {
  font-size: 32px;
  color: #fff;
  font-weight: 300;
}

/* ========== 编辑弹窗 ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 400px;
  background-color: #fff;
  border-radius: var(--radius-xl);
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--color-border);
}

.modal-title {
  font-size: 17px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.modal-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: var(--color-text-tertiary);
}

.modal-body {
  padding: var(--spacing-md);
}

.form-item {
  margin-bottom: var(--spacing-md);
}

.form-label {
  display: block;
  font-size: 14px;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xs);
}

.required {
  color: #FF3B30;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 var(--spacing-md);
  background-color: var(--color-background);
  border-radius: var(--radius-md);
  font-size: 15px;
  color: var(--color-text-primary);
}

.modal-footer {
  display: flex;
  border-top: 1px solid var(--color-border);
}

.modal-btn {
  flex: 1;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  transition: all 0.3s ease;
}

.cancel-btn {
  color: var(--color-text-secondary);
  border-right: 1px solid var(--color-border);
}

.confirm-btn {
  color: var(--color-primary);
  font-weight: 600;
}

.modal-btn:active {
  background-color: var(--color-background);
}

