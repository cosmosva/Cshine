/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background: var(--color-bg);
}

.profile-content {
  padding: var(--spacing-lg);
  padding-bottom: calc(var(--spacing-lg) + env(safe-area-inset-bottom));
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: 0 8px 24px rgba(74, 111, 232, 0.15);
}

.user-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.nickname {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
}

.user-id {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
}

.profile-hint {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 2px;
}

.logout-btn {
  padding: 6px 16px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  font-size: 14px;
  color: #fff;
  backdrop-filter: blur(10px);
}

.complete-btn {
  padding: 6px 16px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: var(--radius-md);
  font-size: 14px;
  color: var(--color-primary);
  font-weight: 500;
  backdrop-filter: blur(10px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
}

.avatar-placeholder {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.login-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  width: 140px;
  height: 40px;
  line-height: 40px;
  background: #fff;
  color: var(--color-primary);
  border-radius: var(--radius-full);
  font-size: 14px;
  font-weight: 500;
}

/* 数据统计 */
.stats-section {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
  background: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.stat-value {
  font-size: 20px;
  font-weight: 600;
  color: var(--color-primary);
}

.stat-label {
  font-size: 12px;
  color: var(--color-text-secondary);
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: var(--spacing-lg);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md) var(--spacing-lg);
  border-bottom: 1px solid var(--color-border);
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--color-bg);
}

.menu-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.menu-icon {
  font-size: 20px;
}

.menu-label {
  font-size: 15px;
  color: var(--color-text-primary);
}

.menu-arrow {
  font-size: 24px;
  color: var(--color-text-tertiary);
}

/* 版本信息 */
.version-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: var(--spacing-lg) 0;
}

.version-text {
  font-size: 13px;
  color: var(--color-text-secondary);
}

.copyright {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

