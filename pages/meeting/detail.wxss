/* 会议纪要详情页样式 */
.meeting-detail-page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  display: flex;
  flex-direction: column;
}

/* ========== 加载状态 ========== */
.loading-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100px 0;
}

.loading-text {
  font-size: 14px;
  color: var(--color-text-tertiary);
}

/* ========== 主内容 ========== */
.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ========== 会议头部 ========== */
.meeting-header {
  position: relative;
  background-color: #fff;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 150px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  opacity: 0.1;
}

.header-content {
  position: relative;
  padding: var(--spacing-lg) var(--spacing-md);
}

.meeting-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: 1.5;
  margin-bottom: var(--spacing-md);
}

.meeting-meta {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.meta-item {
  font-size: 13px;
  color: var(--color-text-secondary);
}

/* ========== 音频播放器 ========== */
.audio-player {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background-color: var(--color-background);
  border-radius: var(--radius-lg);
}

.play-btn {
  width: 48px;
  height: 48px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-btn .icon {
  font-size: 20px;
  color: #fff;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.audio-progress {
  width: 100%;
}

.progress-bar {
  height: 4px;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
  transition: width 0.3s ease;
}

.audio-time {
  display: flex;
  justify-content: space-between;
  font-size: 11px;
  color: var(--color-text-tertiary);
}

/* ========== Tab 导航 ========== */
.tab-nav {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  padding: var(--spacing-md);
  text-align: center;
  font-size: 14px;
  color: var(--color-text-secondary);
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32px;
  height: 3px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
}

/* ========== Tab 内容 ========== */
.tab-content {
  flex: 1;
  background-color: var(--color-background);
}

.content-section {
  padding: var(--spacing-md);
}

/* 通用卡片 */
.section-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

/* 摘要文本 */
.summary-text {
  font-size: 14px;
  color: var(--color-text-secondary);
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ========== 要点列表 ========== */
.key-points-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.point-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  border-left: 3px solid var(--color-primary);
}

.point-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-xs);
}

.point-timestamp {
  font-size: 12px;
  color: var(--color-primary);
  font-weight: 500;
}

.point-speaker {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

.point-topic {
  font-size: 15px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.point-content {
  font-size: 13px;
  color: var(--color-text-secondary);
  line-height: 1.6;
}

/* ========== 行动项列表 ========== */
.action-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.action-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.action-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.action-checkbox {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-border);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #fff;
}

.action-checkbox.checked {
  background-color: #34C759;
  border-color: #34C759;
}

.action-priority {
  padding: 2px 8px;
  border-radius: var(--radius-full);
  font-size: 11px;
  font-weight: 500;
}

.priority-high {
  color: #FF3B30;
  background-color: rgba(255, 59, 48, 0.1);
}

.priority-medium {
  color: #FF9500;
  background-color: rgba(255, 149, 0, 0.1);
}

.priority-low {
  color: #999;
  background-color: rgba(0, 0, 0, 0.05);
}

.action-content {
  font-size: 14px;
  color: var(--color-text-primary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.action-footer {
  display: flex;
  gap: var(--spacing-md);
}

.action-assignee,
.action-deadline {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

/* ========== 转录时间轴 ========== */
.transcript-timeline {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  padding: var(--spacing-md);
}

.transcript-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.transcript-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.speaker-name-text {
  font-size: 15px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4px;
  transition: all 0.3s ease;
}

/* 不同说话人使用不同颜色 */
.speaker-name-text[data-speaker*="SPEAKER_1"] {
  color: #4A6FE8;
}

.speaker-name-text[data-speaker*="SPEAKER_2"] {
  color: #FF6B6B;
}

.speaker-name-text[data-speaker*="SPEAKER_3"] {
  color: #51CF66;
}

.speaker-name-text[data-speaker*="SPEAKER_4"] {
  color: #FFA94D;
}

.speaker-name-text[data-speaker*="SPEAKER_5"] {
  color: #9775FA;
}

.speaker-name-text[data-speaker*="SPEAKER_6"] {
  color: #FF8787;
}

/* 默认颜色（超过6个说话人） */
.speaker-name-text:not([data-speaker*="SPEAKER_1"]):not([data-speaker*="SPEAKER_2"]):not([data-speaker*="SPEAKER_3"]):not([data-speaker*="SPEAKER_4"]):not([data-speaker*="SPEAKER_5"]):not([data-speaker*="SPEAKER_6"]) {
  color: #868E96;
}

.speaker-name-text:active {
  opacity: 0.6;
}

.timestamp-text {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

.transcript-content {
  font-size: 14px;
  color: var(--color-text-primary);
  line-height: 1.8;
  padding: var(--spacing-sm) 0;
  border-bottom: 1px solid var(--color-border);
}

/* ========== 思维导图 ========== */
.mindmap-text {
  font-size: 13px;
  color: var(--color-text-secondary);
  line-height: 1.8;
  white-space: pre-wrap;
  font-family: monospace;
  background-color: var(--color-background);
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
}

.mindmap-hint {
  margin-top: var(--spacing-md);
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: rgba(100, 120, 255, 0.1);
  border-radius: var(--radius-md);
  font-size: 12px;
  color: var(--color-primary);
  line-height: 1.5;
}

/* ========== 全文（兜底） ========== */
.transcript-text {
  font-size: 13px;
  color: var(--color-text-secondary);
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ========== 空状态 ========== */
.empty-tip {
  padding: 60px 32px;
  text-align: center;
  font-size: 14px;
  color: var(--color-text-tertiary);
}

/* ========== 说话人标注弹窗 ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 400px;
  max-height: 70vh;
  background-color: #fff;
  border-radius: var(--radius-xl);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--color-border);
  flex-shrink: 0;
}

.modal-title {
  font-size: 17px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.modal-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: var(--color-text-tertiary);
}

.modal-body {
  padding: var(--spacing-md);
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-subtitle {
  font-size: 14px;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.contacts-list {
  flex: 1;
  max-height: 300px;
  margin-bottom: var(--spacing-md);
}

.contact-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.contact-item:active {
  background-color: var(--color-background);
}

.contact-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.contact-name {
  font-size: 15px;
  color: var(--color-text-primary);
  font-weight: 500;
}

.contact-position {
  font-size: 12px;
  color: var(--color-text-tertiary);
  margin-top: 2px;
}

.empty-contacts {
  padding: 40px 20px;
  text-align: center;
  font-size: 13px;
  color: var(--color-text-tertiary);
}

.custom-name-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-md);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-lg);
  color: #fff;
  font-size: 15px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.custom-name-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 16px;
}

.btn-text {
  font-size: 15px;
}

