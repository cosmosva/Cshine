/* 会议纪要详情页样式 */
.meeting-detail-page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  display: flex;
  flex-direction: column;
}

/* ========== 加载状态 ========== */
.loading-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100px 0;
}

.loading-text {
  font-size: 14px;
  color: var(--color-text-tertiary);
}

/* ========== 主内容 ========== */
.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ========== 会议头部 ========== */
.meeting-header {
  position: relative;
  background-color: #fff;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 150px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  opacity: 0.1;
}

.header-content {
  position: relative;
  padding: var(--spacing-lg) var(--spacing-md);
}

.meeting-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--color-text-primary);
  line-height: 1.5;
  margin-bottom: var(--spacing-md);
}

.meeting-meta {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.meta-item {
  font-size: 13px;
  color: var(--color-text-secondary);
}

/* ========== 音频播放器 ========== */
.audio-player {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background-color: var(--color-background);
  border-radius: var(--radius-lg);
}

.play-btn {
  width: 48px;
  height: 48px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-btn .icon {
  font-size: 20px;
  color: #fff;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.audio-progress {
  width: 100%;
}

.progress-bar {
  height: 4px;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
  transition: width 0.3s ease;
}

.audio-time {
  display: flex;
  justify-content: space-between;
  font-size: 11px;
  color: var(--color-text-tertiary);
}

/* ========== Tab 导航 ========== */
.tab-nav {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  padding: var(--spacing-md);
  text-align: center;
  font-size: 14px;
  color: var(--color-text-secondary);
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--color-primary);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32px;
  height: 3px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
}

/* ========== Tab 内容 ========== */
.tab-content {
  flex: 1;
  background-color: var(--color-background);
}

.content-section {
  padding: var(--spacing-md);
}

/* 通用卡片 */
.section-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

/* 摘要文本 */
.summary-text {
  font-size: 14px;
  color: var(--color-text-secondary);
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ========== 要点列表 ========== */
.key-points-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.point-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  border-left: 3px solid var(--color-primary);
}

.point-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-xs);
}

.point-timestamp {
  font-size: 12px;
  color: var(--color-primary);
  font-weight: 500;
}

.point-speaker {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

.point-topic {
  font-size: 15px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.point-content {
  font-size: 13px;
  color: var(--color-text-secondary);
  line-height: 1.6;
}

/* ========== 行动项列表 ========== */
.action-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.action-card {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.action-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.action-checkbox {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-border);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #fff;
}

.action-checkbox.checked {
  background-color: #34C759;
  border-color: #34C759;
}

.action-priority {
  padding: 2px 8px;
  border-radius: var(--radius-full);
  font-size: 11px;
  font-weight: 500;
}

.priority-high {
  color: #FF3B30;
  background-color: rgba(255, 59, 48, 0.1);
}

.priority-medium {
  color: #FF9500;
  background-color: rgba(255, 149, 0, 0.1);
}

.priority-low {
  color: #999;
  background-color: rgba(0, 0, 0, 0.05);
}

.action-content {
  font-size: 14px;
  color: var(--color-text-primary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.action-footer {
  display: flex;
  gap: var(--spacing-md);
}

.action-assignee,
.action-deadline {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

/* ========== 全文 ========== */
.transcript-text {
  font-size: 13px;
  color: var(--color-text-secondary);
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ========== 空状态 ========== */
.empty-tip {
  padding: 60px 32px;
  text-align: center;
  font-size: 14px;
  color: var(--color-text-tertiary);
}

