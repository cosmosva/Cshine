/* 会议纪要列表页样式 - 知识库（参考截图标准）v2 */

/* CSS 变量定义 */
page {
  --status-bar-height: env(safe-area-inset-top);
  --brand-bar-height: 56px;
  --nav-height: 44px;
  --tabbar-height: 50px;
  --header-total-height: calc(var(--brand-bar-height) + var(--nav-height) + var(--status-bar-height) + 8px);
}

.meeting-list-page {
  width: 100%;
  height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* ========== 品牌栏（第一层导航 - TicNote 风格） ========== */
.brand-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 101;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: calc(var(--brand-bar-height) + var(--status-bar-height));
  padding: 0 16px 10px 16px;
  background-color: #FFFFFF;
}

.brand-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.logo-circle {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A6FE8 0%, #7B5FE8 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 17px;
  font-weight: 600;
  letter-spacing: -0.5px;
}

.brand-name {
  font-size: 17px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.record-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 5px 11px;
  background-color: #FFEBEB;
  border-radius: 14px;
  margin-left: 6px;
}

.record-icon {
  font-size: 11px;
  color: #FF3B30;
  line-height: 1;
}

.record-text {
  font-size: 13px;
  color: #FF3B30;
  font-weight: 500;
  letter-spacing: -0.1px;
}

.brand-right {
  display: flex;
  align-items: center;
  gap: 18px;
}

.icon-btn {
  width: 20px;
  height: 20px;
  font-size: 20px;
  color: #3C3C43;
  padding: 0;
  line-height: 1;
  flex-shrink: 0;
}

/* ========== 二级导航栏（TicNote 风格） ========== */
.header {
  position: fixed;
  top: calc(var(--brand-bar-height) + var(--status-bar-height) + 8px);
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: var(--nav-height);
  padding: 0 16px;
  background-color: #F5F7FA;
  border-radius: 24px 24px 0 0;
  box-shadow: 0 -24px 0 0 #FFFFFF;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.header-left .icon {
  font-size: 22px;
  color: #3C3C43;
  line-height: 1;
  font-weight: 500;
}

.menu-icon {
  width: 22px;
  height: 22px;
  flex-shrink: 0;
}

.header-left .title {
  font-size: 18px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 18px;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 4px 0;
}

.filter-btn .label {
  font-size: 14px;
  color: #3C3C43;
  font-weight: 400;
  letter-spacing: -0.1px;
}

.sort-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4px 0;
}

.sort-btn .icon {
  font-size: 17px;
  color: #3C3C43;
  line-height: 1;
}

/* ========== 主内容区 ========== */
.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-top: var(--header-total-height);
  background-color: #F5F7FA;
}

.meeting-scroll {
  flex: 1;
  background-color: #F5F7FA;
  padding: 0;
  margin: 0;
}

.meeting-list {
  padding: 12px 0px;
  padding-bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom) + 16px);
  margin: 0;
}

/* ========== 会议卡片 ========== */
.meeting-card {
  display: flex;
  flex-direction: column;
  padding: 14px 12px;
  margin-bottom: 10px;
  background-color: #FFFFFF;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.15s ease;
}

.meeting-card:active {
  background-color: #F8F8F8;
}

/* 第一行：标题 + 收藏（TicNote 布局 - 同一行） */
.card-row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
  min-height: 22px;
}

.title {
  font-size: 16px;
  font-weight: 400;
  color: #1A1A1A;
  line-height: 1.4;
  letter-spacing: -0.1px;
  margin-right: 8px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.star-btn {
  padding: 2px;
  margin: -2px;
  flex-shrink: 0;
}

.star-icon {
  font-size: 16px;
  line-height: 1;
  color: #C7C7CC;
}

/* 第二行：录音时间 + 录音时长（TicNote 布局） */
.card-row-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.timestamp {
  font-size: 12px;
  color: #C7C7CC;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'PingFang SC', sans-serif;
  font-weight: 400;
  letter-spacing: -0.05px;
}

.duration {
  font-size: 12px;
  color: #C7C7CC;
  white-space: nowrap;
  font-weight: 400;
  letter-spacing: -0.05px;
  flex-shrink: 0;
}

/* 第三行：扬声器图标 + 来源 + 标签（TicNote 布局） */
.card-row-3 {
  display: flex;
  align-items: center;
  gap: 4px;
  flex-wrap: wrap;
}

.audio-icon {
  font-size: 12px;
  color: #8E8E93;
  flex-shrink: 0;
  line-height: 1;
}

.source-label {
  font-size: 11px;
  color: #8E8E93;
  flex-shrink: 0;
  font-weight: 400;
  letter-spacing: -0.05px;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  flex: 1;
}

.tag {
  padding: 2px 8px;
  background-color: #F2F2F7;
  border-radius: 3px;
  font-size: 11px;
  color: #3C3C43;
  white-space: nowrap;
  font-weight: 400;
  letter-spacing: -0.05px;
}

/* ========== 空状态（TicNote 风格） ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100px 32px 80px 32px;
  text-align: center;
}

.empty-icon {
  font-size: 56px;
  margin-bottom: 16px;
  opacity: 0.4;
}

.empty-text {
  font-size: 16px;
  color: #8E8E93;
  margin-bottom: 8px;
  font-weight: 500;
  letter-spacing: -0.2px;
}

.empty-hint {
  font-size: 14px;
  color: #C7C7CC;
  font-weight: 400;
  letter-spacing: -0.1px;
}

/* ========== 加载提示（TicNote 风格） ========== */
.load-more {
  padding: 20px 16px;
  text-align: center;
}

.loading-text,
.no-more-text {
  font-size: 13px;
  color: #C7C7CC;
  font-weight: 400;
  letter-spacing: -0.05px;
}

/* ========== 筛选/排序菜单（TicNote 风格） ========== */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
  animation: fadeIn 0.25s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.action-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  border-radius: 14px 14px 0 0;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding-bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom));
}

.action-sheet.show {
  transform: translateY(calc(-1 * var(--tabbar-height)));
}

.action-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 16px;
  border-bottom: 0.5px solid #EBEBEB;
}

.action-sheet-title {
  font-size: 17px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.action-sheet-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 19px;
  color: #8E8E93;
  border-radius: 16px;
  transition: background-color 0.15s ease;
  line-height: 1;
}

.action-sheet-close:active {
  background-color: #F2F2F7;
}

.action-sheet-body {
  max-height: 400px;
  overflow-y: auto;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  border-bottom: 0.5px solid #F2F2F7;
  transition: background-color 0.15s ease;
}

.action-item:active {
  background-color: #F8F8F8;
}

.action-item.active {
  background-color: rgba(74, 111, 232, 0.04);
}

.action-label {
  font-size: 16px;
  color: #1A1A1A;
  font-weight: 400;
  letter-spacing: -0.2px;
}

.action-item.active .action-label {
  color: #4A6FE8;
  font-weight: 500;
}

.action-check {
  font-size: 17px;
  color: #4A6FE8;
  font-weight: 700;
  line-height: 1;
}

/* ========== 侧边栏抽屉 - 知识库管理 ========== */

/* 遮罩层 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: all 0.25s ease;
}

.drawer-mask.show {
  background-color: rgba(0, 0, 0, 0.4);
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

/* 抽屉容器 */
.drawer {
  position: fixed;
  top: 0;
  left: -100%;
  width: 80%;
  height: 100vh;
  background-color: #F8F9FA;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  box-shadow: 2px 0 12px rgba(0, 0, 0, 0.1);
  transition: left 0.25s cubic-bezier(0.4, 0, 0.2, 1), visibility 0s 0.25s;
  pointer-events: none;
  visibility: hidden;
  overflow: hidden;
}

.drawer.show {
  left: 0;
  pointer-events: auto;
  visibility: visible;
  transition: left 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 抽屉滚动容器 */
.drawer-scroll {
  width: 100%;
  height: 100vh;
  background-color: #F8F9FA;
  -webkit-overflow-scrolling: touch;
}

/* 抽屉头部 */
.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 16px 14px 16px;
  padding-top: calc(env(safe-area-inset-top) + 16px);
  background-color: #FFFFFF;
  border-bottom: 0.5px solid #E5E5E5;
  min-height: 56px;
}

.drawer-title {
  font-size: 20px;
  font-weight: 600;
  color: #000000;
  letter-spacing: -0.3px;
}

.drawer-icons {
  display: flex;
  align-items: center;
  gap: 20px;
}

.drawer-icon {
  width: 18px;
  height: 18px;
  font-size: 18px;
  color: #000000;
  transition: opacity 0.2s;
  line-height: 1;
  flex-shrink: 0;
}

.drawer-icon:active {
  opacity: 0.5;
}

/* 抽屉内容 */
.drawer-content {
  background-color: #F8F9FA;
  padding: 12px;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120px);
  box-sizing: border-box;
}

/* 通用列表项 - 卡片样式 */
.drawer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 13px 16px;
  background-color: #FFFFFF;
  border-radius: 8px;
  margin-bottom: 8px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  transition: all 0.15s;
  width: 100%;
  box-sizing: border-box;
}

.drawer-item:active {
  background-color: #F5F5F5;
  transform: scale(0.98);
}

.item-left {
  display: flex;
  align-items: center;
  gap: 10px;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.folder-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.item-name {
  font-size: 15px;
  color: #000000;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 1;
}

.item-count {
  font-size: 15px;
  color: #8E8E93;
  font-weight: 400;
  margin-left: 4px;
  flex-shrink: 0;
  white-space: nowrap;
}

/* 全部文件（录音文件）- 独立卡片 */
.drawer-item.all-files {
  margin-bottom: 16px;
}

.drawer-item.all-files .item-name {
  font-weight: 400;
}

/* 分组区域 */
.drawer-section {
  margin-top: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 4px 12px 16px;
  background-color: transparent;
}

.section-title {
  font-size: 15px;
  color: #8E8E93;
  font-weight: 400;
  letter-spacing: -0.3px;
}

.section-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  flex-shrink: 0;
}

.action-icon {
  width: 18px;
  height: 18px;
  font-size: 18px;
  color: #000000;
  transition: opacity 0.15s;
  line-height: 1;
  flex-shrink: 0;
}

.action-icon:active {
  opacity: 0.5;
}

/* 文件夹列表项 - 独立卡片 */
.folder-item {
  /* 继承通用卡片样式 */
}

.folder-item:last-child {
  margin-bottom: 8px;
}

.more-icon {
  font-size: 18px;
  color: #000000;
  line-height: 1;
  padding: 0 0 0 12px;
  flex-shrink: 0;
  white-space: nowrap;
}

/* ========== Modal 样式（上传功能） ========== */

/* Modal 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal-mask.show {
  opacity: 1;
}

/* Modal 容器 */
.modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  width: 80%;
  max-width: 400px;
  background-color: #FFFFFF;
  border-radius: 16px;
  z-index: 1002;
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

.modal.small {
  max-width: 340px;
  width: 80%;
}

/* Modal 头部 */
.modal-header {
  padding: 24px 20px 18px;
  border-bottom: 0.5px solid #EBEBEB;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #1A1A1A;
}

/* Modal 内容 */
.modal-body {
  padding: 24px 20px;
  max-height: 400px;
  overflow-y: auto;
}

/* 当前知识库标签 */
.current-folder-label {
  display: block;
  font-size: 14px;
  color: #8E8E93;
  margin-bottom: 16px;
  font-weight: 400;
}

/* 知识库列表 */
.folder-list {
  max-height: 300px;
  margin-bottom: 16px;
}

/* 知识库选项 */
.folder-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border-radius: 8px;
  margin-bottom: 8px;
  transition: background-color 0.15s;
}

.folder-option:active {
  background-color: #F5F5F5;
}

.folder-option.selected {
  background-color: rgba(74, 111, 232, 0.08);
}

.folder-name {
  font-size: 16px;
  color: #1A1A1A;
  font-weight: 400;
}

.folder-option.selected .folder-name {
  color: #4A6FE8;
  font-weight: 500;
}

.check-icon {
  color: #4A6FE8;
  font-size: 18px;
  font-weight: 700;
  line-height: 1;
}

/* Modal 操作按钮 */
.modal-actions {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.modal-footer {
  display: flex;
  gap: 12px;
  padding: 18px 20px 20px;
  border-top: none;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 14px;
  border-radius: 10px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s;
}

/* button 元素重置样式 */
button.btn-primary,
button.btn-secondary {
  border: none;
  outline: none;
  line-height: normal;
}

button.btn-primary::after,
button.btn-secondary::after {
  border: none;
}

.btn-primary {
  background-color: #4A6FE8;
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #F5F5F5;
  color: #1A1A1A;
}

.btn-primary:active,
.btn-secondary:active {
  opacity: 0.7;
}

/* 知识库名称输入框 */
.folder-name-input {
  width: 100%;
  padding: 14px 16px;
  border: 1px solid #E5E5E5;
  border-radius: 10px;
  font-size: 16px;
  box-sizing: border-box;
  background-color: #F8F9FA;
  color: #1A1A1A;
  transition: border-color 0.2s;
  line-height: 1.5;
  height: 48px;
}

.folder-name-input:focus {
  border-color: #4A6FE8;
  background-color: #FFFFFF;
}

/* Placeholder 样式 */
.input-placeholder {
  color: #C7C7CC;
  font-size: 16px;
}

/* ========== 上传与新建 Modal（TicNote 风格） ========== */

/* 上传 Modal 容器 */
.upload-modal {
  max-width: 320px;
  width: 85%;
  z-index: 1003;
}

/* Modal 头部居中样式 */
.modal-header.center {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 16px 16px;
  border-bottom: none;
}

.modal-header.center .modal-title {
  font-size: 17px;
  font-weight: 600;
  color: #1A1A1A;
  text-align: center;
}

.modal-close {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #8E8E93;
  border-radius: 14px;
  transition: background-color 0.15s;
}

.modal-close:active {
  background-color: #F2F2F7;
}

/* Modal Body 无 padding 样式 */
.modal-body.no-padding {
  padding: 0;
  max-height: none;
}

/* 上传选项卡片 */
.upload-option-item {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 18px 20px;
  border-bottom: 0.5px solid #F2F2F7;
  transition: background-color 0.15s;
}

.upload-option-item:last-child {
  border-bottom: none;
  border-radius: 0 0 16px 16px;
}

.upload-option-item:active {
  background-color: #F8F8F8;
}

.option-icon {
  width: 24px;
  height: 24px;
  flex-shrink: 0;
}

.option-label {
  font-size: 16px;
  color: #1A1A1A;
  font-weight: 400;
  letter-spacing: -0.2px;
}

/* ========== 知识库管理新增样式 ========== */

/* 危险操作样式 */
.action-item.danger {
  color: #FF3B30;
}

.action-item.danger .action-icon {
  opacity: 1;
}

/* 危险按钮 */
.btn-danger {
  flex: 1;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  background-color: #FF3B30;
  color: #FFFFFF;
  transition: opacity 0.15s;
}

.btn-danger:active {
  opacity: 0.7;
}

/* 删除警告文案 */
.delete-warning {
  display: block;
  font-size: 16px;
  color: #1A1A1A;
  margin-bottom: 12px;
  line-height: 22px;
}

.delete-note {
  display: block;
  font-size: 14px;
  color: #8E8E93;
  line-height: 20px;
}

/* 知识库更多操作按钮优化 */
.more-icon {
  padding: 6px;
  font-size: 18px;
  color: #8E8E93;
  transition: opacity 0.15s;
}

.more-icon:active {
  opacity: 0.5;
}

/* 当前位置标签 */
.current-folder-label {
  display: block;
  font-size: 14px;
  color: #8E8E93;
  margin-bottom: 12px;
}

/* ========== Modal 组件样式 ========== */

/* Modal 遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 知识库选择器 Modal 容器 */
.folder-selector-modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 400px;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 16px;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
}

/* Modal 头部 */
.modal-header {
  padding: 20px 20px 16px;
  border-bottom: 0.5px solid #EBEBEB;
  flex-shrink: 0;
}

.modal-header.center {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.modal-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #8E8E93;
  border-radius: 16px;
  transition: background-color 0.15s ease;
}

.modal-close:active {
  background-color: #F2F2F7;
}

/* Modal 主体 */
.modal-body {
  padding: 20px;
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-body.no-padding {
  padding: 0;
}

/* 知识库列表 */
.folder-list {
  flex: 1;
  max-height: 40vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.folder-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  border-bottom: 0.5px solid #F2F2F7;
  transition: background-color 0.15s ease;
}

.folder-option:active {
  background-color: #F8F8F8;
}

.folder-option.selected {
  background-color: rgba(74, 111, 232, 0.04);
}

.folder-name {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 16px;
  color: #1A1A1A;
  font-weight: 400;
  letter-spacing: -0.2px;
}

.folder-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

.folder-option.selected .folder-name {
  color: #4A6FE8;
  font-weight: 500;
}

.check-icon {
  font-size: 18px;
  color: #4A6FE8;
  font-weight: 700;
  line-height: 1;
}

/* Modal 底部按钮 - 固定在底部 */
.modal-actions {
  display: flex;
  gap: 12px;
  padding: 16px 20px;
  border-top: 0.5px solid #EBEBEB;
  flex-shrink: 0;
  background-color: #FFFFFF;
}

/* 按钮样式 */
.btn-primary,
.btn-secondary {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  font-size: 16px;
  font-weight: 500;
  letter-spacing: -0.2px;
  transition: all 0.15s ease;
}

.btn-primary {
  background-color: #4A6FE8;
  color: #FFFFFF;
}

.btn-primary:active {
  background-color: #3A5FD8;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #F2F2F7;
  color: #1A1A1A;
}

.btn-secondary:active {
  background-color: #E5E5EA;
  transform: scale(0.98);
}

/* 危险操作按钮 */
.btn-danger {
  background-color: #FF3B30;
  color: #FFFFFF;
}

.btn-danger:active {
  background-color: #E02B20;
}

