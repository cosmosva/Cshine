/* 会议纪要列表页样式 - 知识库（参考截图标准）v2 */

/* CSS 变量定义 */
page {
  --status-bar-height: env(safe-area-inset-top);
  --brand-bar-height: 56px;
  --nav-height: 44px;
  --tabbar-height: 50px;
  --header-total-height: calc(var(--brand-bar-height) + var(--nav-height) + var(--status-bar-height) + 8px);
}

.meeting-list-page {
  width: 100%;
  height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* ========== 品牌栏（第一层导航 - TicNote 风格） ========== */
.brand-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 101;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: calc(var(--brand-bar-height) + var(--status-bar-height));
  padding: 0 16px 10px 16px;
  background-color: #FFFFFF;
}

.brand-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.logo-circle {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A6FE8 0%, #7B5FE8 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 17px;
  font-weight: 600;
  letter-spacing: -0.5px;
}

.brand-name {
  font-size: 17px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.record-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 5px 11px;
  background-color: #FFEBEB;
  border-radius: 14px;
  margin-left: 6px;
}

.record-icon {
  font-size: 11px;
  color: #FF3B30;
  line-height: 1;
}

.record-text {
  font-size: 13px;
  color: #FF3B30;
  font-weight: 500;
  letter-spacing: -0.1px;
}

.brand-right {
  display: flex;
  align-items: center;
  gap: 18px;
}

.icon-btn {
  font-size: 19px;
  color: #1A1A1A;
  padding: 4px;
  line-height: 1;
}

/* ========== 二级导航栏（TicNote 风格） ========== */
.header {
  position: fixed;
  top: calc(var(--brand-bar-height) + var(--status-bar-height) + 8px);
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: var(--nav-height);
  padding: 0 16px;
  background-color: #F5F7FA;
  border-radius: 24px 24px 0 0;
  box-shadow: 0 -24px 0 0 #FFFFFF;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.header-left .icon {
  font-size: 19px;
  color: #3C3C43;
  line-height: 1;
}

.header-left .title {
  font-size: 16px;
  font-weight: 500;
  color: #1A1A1A;
  letter-spacing: -0.2px;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 18px;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 4px 0;
}

.filter-btn .label {
  font-size: 14px;
  color: #3C3C43;
  font-weight: 400;
  letter-spacing: -0.1px;
}

.sort-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4px 0;
}

.sort-btn .icon {
  font-size: 17px;
  color: #3C3C43;
  line-height: 1;
}

/* ========== 主内容区 ========== */
.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-top: var(--header-total-height);
  background-color: #F5F7FA;
}

.meeting-scroll {
  flex: 1;
  background-color: #F5F7FA;
}

.meeting-list {
  padding: 12px 0;
  padding-bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom) + 16px);
}

/* ========== 会议卡片 ========== */
.meeting-card {
  display: flex;
  flex-direction: column;
  padding: 14px 16px;
  margin-bottom: 10px;
  background-color: #FFFFFF;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.15s ease;
}

.meeting-card:active {
  background-color: #F8F8F8;
}

/* 第一行：标题 + 收藏（TicNote 布局 - 同一行） */
.card-row-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
  min-height: 22px;
}

.title {
  font-size: 16px;
  font-weight: 400;
  color: #1A1A1A;
  line-height: 1.4;
  letter-spacing: -0.1px;
  margin-right: 8px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.star-btn {
  padding: 2px;
  margin: -2px;
  flex-shrink: 0;
}

.star-icon {
  font-size: 16px;
  line-height: 1;
  color: #C7C7CC;
}

/* 第二行：录音时间 + 录音时长（TicNote 布局） */
.card-row-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.timestamp {
  font-size: 12px;
  color: #C7C7CC;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'PingFang SC', sans-serif;
  font-weight: 400;
  letter-spacing: -0.05px;
}

.duration {
  font-size: 12px;
  color: #C7C7CC;
  white-space: nowrap;
  font-weight: 400;
  letter-spacing: -0.05px;
  flex-shrink: 0;
}

/* 第三行：扬声器图标 + 来源 + 标签（TicNote 布局） */
.card-row-3 {
  display: flex;
  align-items: center;
  gap: 4px;
  flex-wrap: wrap;
}

.audio-icon {
  font-size: 12px;
  color: #8E8E93;
  flex-shrink: 0;
  line-height: 1;
}

.source-label {
  font-size: 11px;
  color: #8E8E93;
  flex-shrink: 0;
  font-weight: 400;
  letter-spacing: -0.05px;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  flex: 1;
}

.tag {
  padding: 2px 8px;
  background-color: #F2F2F7;
  border-radius: 3px;
  font-size: 11px;
  color: #3C3C43;
  white-space: nowrap;
  font-weight: 400;
  letter-spacing: -0.05px;
}

/* ========== 空状态（TicNote 风格） ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100px 32px 80px 32px;
  text-align: center;
}

.empty-icon {
  font-size: 56px;
  margin-bottom: 16px;
  opacity: 0.4;
}

.empty-text {
  font-size: 16px;
  color: #8E8E93;
  margin-bottom: 8px;
  font-weight: 500;
  letter-spacing: -0.2px;
}

.empty-hint {
  font-size: 14px;
  color: #C7C7CC;
  font-weight: 400;
  letter-spacing: -0.1px;
}

/* ========== 加载提示（TicNote 风格） ========== */
.load-more {
  padding: 20px 16px;
  text-align: center;
}

.loading-text,
.no-more-text {
  font-size: 13px;
  color: #C7C7CC;
  font-weight: 400;
  letter-spacing: -0.05px;
}

/* ========== 筛选/排序菜单（TicNote 风格） ========== */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
  animation: fadeIn 0.25s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.action-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  border-radius: 14px 14px 0 0;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding-bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom));
}

.action-sheet.show {
  transform: translateY(calc(-1 * var(--tabbar-height)));
}

.action-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 16px;
  border-bottom: 0.5px solid #EBEBEB;
}

.action-sheet-title {
  font-size: 17px;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: -0.3px;
}

.action-sheet-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 19px;
  color: #8E8E93;
  border-radius: 16px;
  transition: background-color 0.15s ease;
  line-height: 1;
}

.action-sheet-close:active {
  background-color: #F2F2F7;
}

.action-sheet-body {
  max-height: 400px;
  overflow-y: auto;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  border-bottom: 0.5px solid #F2F2F7;
  transition: background-color 0.15s ease;
}

.action-item:active {
  background-color: #F8F8F8;
}

.action-item.active {
  background-color: rgba(74, 111, 232, 0.04);
}

.action-label {
  font-size: 16px;
  color: #1A1A1A;
  font-weight: 400;
  letter-spacing: -0.2px;
}

.action-item.active .action-label {
  color: #4A6FE8;
  font-weight: 500;
}

.action-check {
  font-size: 17px;
  color: #4A6FE8;
  font-weight: 700;
  line-height: 1;
}
