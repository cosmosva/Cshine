/* 会议音频上传页样式 */
.meeting-upload-page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  display: flex;
  flex-direction: column;
}

.page-content {
  flex: 1;
  padding: var(--spacing-md);
}

/* ========== 上传模式 ========== */
.upload-mode {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.form-section {
  background-color: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.form-item {
  margin-bottom: var(--spacing-lg);
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 14px;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
  font-weight: 500;
}

.required {
  color: #FF3B30;
}

.form-input {
  width: 100%;
  height: 44px;
  padding: 0 var(--spacing-md);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  font-size: 14px;
  color: var(--color-text-primary);
  background-color: var(--color-background);
}

.form-input.picker {
  display: flex;
  align-items: center;
  color: var(--color-text-secondary);
}

/* 文件选择器 */
.file-selector {
  border: 2px dashed var(--color-border);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  text-align: center;
  transition: all 0.3s ease;
}

.file-selector:active {
  border-color: var(--color-primary);
  background-color: rgba(74, 111, 232, 0.05);
}

.file-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
}

.file-icon {
  font-size: 24px;
}

.file-name {
  font-size: 14px;
  color: var(--color-text-primary);
}

.file-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
}

.file-placeholder .icon {
  font-size: 32px;
  opacity: 0.5;
}

.file-placeholder .text {
  font-size: 14px;
  color: var(--color-text-primary);
}

.file-placeholder .hint {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

/* 提交区域 */
.submit-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md) 0;
}

.submit-btn {
  width: 100%;
  height: 48px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  color: #fff;
  border: none;
  border-radius: var(--radius-full);
  font-size: 16px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-hint {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

/* ========== 处理中模式 ========== */
.processing-mode {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.processing-card {
  width: 100%;
  background-color: #fff;
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

/* 进度环 */
.progress-ring {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  animation: pulse 2s ease-in-out infinite;
}

.progress-ring::after {
  content: '';
  position: absolute;
  width: 100px;
  height: 100px;
  background-color: #fff;
  border-radius: 50%;
}

.progress-value {
  position: relative;
  z-index: 1;
  font-size: 28px;
  font-weight: bold;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 状态信息 */
.status-info {
  width: 100%;
  text-align: center;
}

.status-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
}

.status-text {
  font-size: 14px;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-md);
}

.status-desc {
  font-size: 13px;
  color: var(--color-text-tertiary);
  margin-bottom: var(--spacing-sm);
}

/* 处理步骤 */
.process-steps {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
}

.step-item {
  font-size: 13px;
  color: var(--color-text-tertiary);
  text-align: left;
  padding-left: var(--spacing-md);
}

.step-item.active {
  color: var(--color-primary);
  font-weight: 500;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 6px;
  background-color: var(--color-background);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
  transition: width 0.5s ease;
}

/* ========== 完成模式 ========== */
.completed-mode,
.failed-mode {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.success-card,
.error-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-xl);
  background-color: #fff;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
}

.success-icon,
.error-icon {
  font-size: 64px;
  margin-bottom: var(--spacing-sm);
}

.success-icon {
  color: #34C759;
}

.success-title,
.error-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.success-desc,
.error-desc {
  font-size: 14px;
  color: var(--color-text-secondary);
  text-align: center;
  line-height: 1.6;
}

.retry-btn {
  margin-top: var(--spacing-md);
  width: 200px;
  height: 44px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  color: #fff;
  border: none;
  border-radius: var(--radius-full);
  font-size: 14px;
  font-weight: 500;
}

